<div class="blue lighten-4">
  <nav class="container d-flex justify-content-between">
    <div class="navbar-brand">Galleries</div>
    <div class="submenus">
      <% Menus.new.gallery_types.each do |gt| %>
      <%= link_to gt[:title], gt[:path], class: "btn", "data-classify" => gt[:title] %>
      <% end %>
    </div>
  </nav>
</div>

<% @galleries.each do |g| %>
<% cover = g.cover.empty? ? g.images.first : g.images.select {|img| img.image.filename == g.cover}.first  %>
<%= image_tag cover.image.variant(resize: "700") %>

<% end %>
